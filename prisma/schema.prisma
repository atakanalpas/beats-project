generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  contacts  Contact[]
  sentMails SentMail[]
}

model Contact {
  id          String    @id @default(cuid())
  userId      String
  name        String
  email       String
  category    String?
  position    Int       @default(0)
  lastSentAt  DateTime?

  sentMails   SentMail[]

  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, email])
}

model SentMail {
  id              String     @id @default(cuid())
  userId          String
  contactId       String
  gmailMessageId  String     @unique
  sentAt          DateTime

  attachments     Attachment[]

  user            User       @relation(fields: [userId], references: [id])
  contact         Contact    @relation(fields: [contactId], references: [id])
}

model Attachment {
  id          String    @id @default(cuid())
  sentMailId  String
  filename    String

  sentMail    SentMail  @relation(fields: [sentMailId], references: [id])
}
