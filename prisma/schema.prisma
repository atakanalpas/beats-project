// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
provider = "postgresql"
url      = env("DATABASE_URL")
directUrl = env("DIRECT_URL")
}



// WICHTIG: NextAuth Models MÜSSEN genau diese Namen haben
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  manualDrafts ManualDraft[]

  // NextAuth Relations
  accounts Account[]
  sessions Session[]

  // Ihre eigenen Relations
  contacts   Contact[]
  sentMails  SentMail[]
  categories Category[] // ⬅️ DIESE ZEILE HINZUFÜGEN

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Optional: Für Email-Verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Contact {
  id     String @id @default(cuid())
  userId String
  name   String
  email  String
  manualDrafts ManualDraft[]


  categoryId String? // FK → Category
  position   Int       @default(0)
  lastSentAt DateTime?

  sentMails SentMail[]
  user      User       @relation(fields: [userId], references: [id])
  category  Category?  @relation(fields: [categoryId], references: [id])

  @@unique([userId, email])
}

model SentMail {
  id             String   @id @default(cuid())
  userId         String
  contactId      String
  gmailMessageId String   @unique
  sentAt         DateTime

  attachments Attachment[]
  user        User         @relation(fields: [userId], references: [id])
  contact     Contact      @relation(fields: [contactId], references: [id])
}

model Attachment {
  id         String @id @default(cuid())
  sentMailId String
  filename   String

  sentMail SentMail @relation(fields: [sentMailId], references: [id])
}

model Category {
  id       String @id @default(cuid())
  userId   String
  name     String
  position Int    @default(0)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  contacts Contact[]

  @@unique([userId, name])
}

model ManualDraft {
  id        String   @id @default(cuid())
  userId    String
  contactId String?  // null = noch nicht abgelegt
  note      String?  @db.Text
  sentAt    DateTime @default(now())
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([contactId])
}
